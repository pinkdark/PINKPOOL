@import colors

#nprogress
    pointer-events: none

    .bar
        background: $main-color
        position: fixed
        z-index: 1031
        top: 0
        left: 0
        width: 100%
        height: 2px

    .spinner-icon
        display: none

    .peg
        display: none

.nprogress-custom-parent
    overflow: hidden
    position: relative
